markup = full
alignment = left
vertical_alignment = center
show_age_threshold = 60
word_wrap = yes
stack_duplicates = true
hide_duplicate_count = false

show_indicators = yes

min_icon_size = 0
max_icon_size = 64

icon_path = /usr/share/icons/Kuyen-icons/status/16/:/usr/share/icons/Kuyen-icons/devices/16/:/usr/share/icons/Kuyen-icons/actions/16/:/usr/share/icons/Kuyen-icons/animations/:/usr/share/icons/Kuyen-icons/16x16/apps/:/usr/share/icons/Kuyen-icons/16x16/categories/:/usr/share/icons/Kuyen-icons/16x16/emblems/:/usr/share/icons/Kuyen-icons/16x16/emotes/:/usr/share/icons/Kuyen-icons/devices/16:/usr/share/icons/Kuyen-icons/panel/16:/usr/share/icons/Kuyen-icons/places/16/

